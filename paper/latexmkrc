$pdf_mode = 1;              # build PDF
$interaction = 'nonstopmode';
$bibtex_use = 1;            # run bibtex automatically

# Ignore version stamp for dependency hash to avoid spurious rebuilds
$hash_calc_ignore_pattern{'tex'} = '^\\s*\\\\newcommand\\s*\\{\\s*\\\\gitversion\\s*\\}\\s*\\{[^}]*\\}\\s*$';
